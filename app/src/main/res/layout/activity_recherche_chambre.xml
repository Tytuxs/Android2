<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RechercheChambre">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewResaChambre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Réservation Chambre"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="412dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textViewDateSouhait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date souhaitée"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="AAAA-MM-JJ"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="413dp"
        android:layout_height="61dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/textViewNomClientRef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom Client Référence"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="Name"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="410dp"
        android:layout_height="57dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/textViewTypeChambre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type Chambre"
            tools:ignore="MissingConstraints" />

        <Spinner
            android:id="@+id/spinnerNbPersonne"
            android:layout_width="271dp"
            android:layout_height="35dp"
            android:minHeight="48dp"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="410dp"
        android:layout_height="62dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/textViewCategorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catégorie"
            tools:ignore="MissingConstraints" />

        <Spinner
            android:id="@+id/spinnerCategorie"
            android:layout_width="370dp"
            android:layout_height="30dp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="416dp"
        android:layout_height="72dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <TextView
            android:id="@+id/textViewNbNuits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Nuits"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editTextTextNbNuits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="Entrer un nombre"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="82dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <Button
            android:id="@+id/buttonRecherche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recherche"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>